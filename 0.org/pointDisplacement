FoamFile
{
    version     2.0;
    format      ascii;
    class       pointVectorField;
    location    "0.01";
    object      pointDisplacement;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    stationaryWalls
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    frontBack
    {
        type            symmetryPlane;
    }
    atmosphere
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    floatingObject
    {
        type            sixDoFRigidBodyDisplacement;
        centreOfMass    (0.05 2.5 0.1);
        momentOfInertia (0.0208 0.0208 0.004151515);
        mass            2.5;
        rhoInf          1;  // needed only for solvers solving for kinematic pressure
        report          on;
        value           uniform (0 0 0);
        constraints
        {
            maxIterations   500;
            fixedPoint1
            {
                sixDoFRigidBodyMotionConstraint fixedPoint;
                tolerance        1e-6; //1e-8
                relaxationFactor 0.5;  //0.7
                fixedPointCoeffs
                {
                    fixedPoint      (0.0 2.54 0);
                }
            }
            fixedPoint2
            {
                sixDoFRigidBodyMotionConstraint fixedPoint;
                tolerance        1e-6; //1e-8
                relaxationFactor 0.5;  //0.7
                fixedPointCoeffs
                {
                    fixedPoint      (0.1 2.54 0);
                }
            }
            /*
            fixedPoint3
            {
                sixDoFRigidBodyMotionConstraint fixedPoint;
                tolerance        1e-6; //1e-8
                relaxationFactor 0.5;  //0.7
                fixedPointCoeffs
                {
                    fixedPoint      (0.05 2.46 0.2);
                }
            }
            */
        }
        
        restraints
        {
            axialSpring1
            {
                sixDoFRigidBodyMotionRestraint linearAxialAngularSpring;

                linearAxialAngularSpringCoeffs
                {
                    axis            (1 0 0);
                    stiffness       100;
                    damping         0.5;
                    referenceOrientation (1 0 0 0 1 0 0 0 1); //$orientation;
                }
            }
        }
    }
}


